---
interface Props {
  href: string;
  data: any;
}

const props = Astro.props;
---

<div class={props.data.wide ? "lg:col-span-2" : ""}>
  <div class="select-none">
    <a href={props.href} class="pb-5 block">
      <div class="flex flex-col gap-1 pb-5 cursor-pointer">
        <div
          style={`background-image: url(${props.data.img});`}
          class={`bg-slate-100 bgimg h-0 relative ${
            props.data.wide ? "pb-[50%]" : "pb-[120%]"
          }
        w-full rounded-md
        `}
        >
          <div class="h-full relative w-full bg-red-300"></div>
        </div>
      </div>
      <p
        class="text-responsive-normal pb-[1vmin] leading-[1.3] pt-1 font-medium"
      >
        {props.data.title}
      </p>
      <p class="text-dimmed text-responsive-small">
        {props.data.description}
      </p>
    </a>
  </div>
</div>
