---
import BaseHead from "../components/BaseHead.astro";
import ReactivePfp from "../components/global/ReactivePfp.astro";
import { SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en" class="touch-manipulation">
  <head>
    <BaseHead title="Baris' Directory" description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div
      class="p-4 max-w-screen-sm m-auto w-screen h-full flex flex-col items-center gap-3"
    >
      <div class="w-full">
        <ReactivePfp />
      </div>
      <div class="w-full pb-4">
        <div class="flex flex-col gap-1">
          <p class="text-base">Hello! My name is</p>
          <h1 class="text-3xl select-all py-1 font-medium">
            Baris Inandioglu
          </h1>
          <div class="text-dimmed text-base">
            <p>Use the links below to find me on the web.</p>
          </div>
        </div>
      </div>
      <a
        href="https://inandioglu.com"
        target="_self"
        class="border border-neutral-300 shadow-md cursor-pointer rounded-md w-full py-1 px-3"
        >🌐 <span class="pl-1">My Website</span></a
      >
      <a
        href="https://inandioglu.com/file/resume.pdf"
        target="_self"
        class="border border-neutral-300 shadow-md cursor-pointer rounded-md w-full py-1 px-3"
        >📃 <span class="pl-1">Resume</span></a
      >
      <a
        href="https://instagram.com/barisinandi"
        target="_self"
        class="border border-neutral-300 shadow-md cursor-pointer rounded-md w-full py-1 px-3"
        >📷 <span class="pl-1">Instagram</span></a
      >
      <a
        href="https://github.com/baris-inandi"
        target="_self"
        class="border border-neutral-300 shadow-md cursor-pointer rounded-md w-full py-1 px-3"
        >🐙 <span class="pl-1">GitHub</span></a
      >
      <a
        href="https://linkedin.com/in/baris-inandi"
        target="_self"
        class="border border-neutral-300 shadow-md cursor-pointer rounded-md w-full py-1 px-3"
        >💼 <span class="pl-1">LinkedIn</span></a
      >
    </div>
  </body></html
>
