{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
  "pluginSearchDirs": false,
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": false,
  "trailingComma": "all",
  "printWidth": 72,
  "semi": true,
  "quoteProps": "consistent",
  "bracketSameLine": false,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "crlf"
}

